lang en_US
keyboard us
timezone Etc/UTC --isUtc
rootpw "{{ host.rootPassword }}"
#platform x86_64
reboot
url --url=http://repo.almalinux.org/almalinux/8.4/BaseOS/x86_64/os/
bootloader --location=mbr --append="net.ifnames=0 biosdevname=0 rhgb quiet crashkernel=auto"
zerombr
clearpart --all --initlabel --disklabel=gpt
autopart --nolvm --nohome --noboot --noswap
auth --passalgo=sha512 --useshadow
firewall --disabled
selinux --disabled
firstboot --disable
%packages
@^minimal-environment
kexec-tools
%end